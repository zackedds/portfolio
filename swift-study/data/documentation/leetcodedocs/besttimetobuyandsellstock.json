","code":["public class Solution {","    func maxProfit(_ prices: [Int]) -> Int {","        var buy = prices[0]","        var maxProfit = 0","        for p in prices {","            buy = min(p, buy)","            maxProfit = max(p - buy, maxProfit)","        }","        return maxProfit","    }","}"],"syntax":"swift"}]}],"sections":[],"kind":"symbol","variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/leetcodedocs\/besttimetobuyandsellstock"]}],"hierarchy":{"paths":[["doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"metadata":{"role":"symbol","symbolKind":"struct","navigatorTitle":[{"kind":"identifier","text":"BestTimeToBuyAndSellStock"}],"externalID":"s:12LeetCodeDocs25BestTimeToBuyAndSellStockV","modules":[{"name":"LeetCodeDocs"}],"roleHeading":"Structure","title":"BestTimeToBuyAndSellStock","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"BestTimeToBuyAndSellStock","kind":"identifier"}],"color":{"standardColorIdentifier":"green"}},"references":{"doc://LeetCodeDocs/documentation/LeetCodeDocs/BestTimeToBuyAndSellStock/Solution":{"fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"Solution"}],"navigatorTitle":[{"kind":"identifier","text":"Solution"}],"url":"\/documentation\/leetcodedocs\/besttimetobuyandsellstock\/solution","type":"topic","identifier":"doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs\/BestTimeToBuyAndSellStock\/Solution","title":"BestTimeToBuyAndSellStock.Solution","kind":"symbol","abstract":[{"text":"Solves the Best Time to Buy and Sell Stock problem.","type":"text"}],"role":"symbol"},"doc://LeetCodeDocs/documentation/LeetCodeDocs/BestTimeToBuyAndSellStock":{"url":"\/documentation\/leetcodedocs\/besttimetobuyandsellstock","role":"symbol","type":"topic","kind":"symbol","abstract":[{"text":"LeetCode #121 • Easy • Arrays & Greedy","type":"text"}],"identifier":"doc:\/\/LeetCodeDocs\/d