{"level":2,"text":"Solution","anchor":"Solution","type":"heading"},{"syntax":"swift","code":["public class TreeNode {","    public var val: Int","    public var left: TreeNode?","    public var right: TreeNode?","    public init() { self.val = 0; self.left = nil; self.right = nil; }","    public init(_ val: Int) { self.val = val; self.left = nil; self.right = nil; }","    public init(_ val: Int, _ left: TreeNode?, _ right: TreeNode?) { self.val = val; self.left = left; self.right = right; }","}","","class Solution {","    func rightSideView(_ root: TreeNode?) -> [Int] {","        guard let root = root else { return [] }","        ","        var currentLevel: [TreeNode] = [root]","        var result: [Int] = []","        ","        while !currentLevel.isEmpty {","            \/\/ 1. Capture the view (The first item is the Rightmost because of our order)","            result.append(currentLevel[0].val)","            ","            \/\/ 2. Build the next level (Avoids removeFirst)","            var nextLevel: [TreeNode] = []","            for node in currentLevel {","                if let right = node.right { nextLevel.append(right) }","                if let left = node.left { nextLevel.append(left) }","            }","            ","            \/\/ 3. Move forward","            currentLevel = nextLevel","        }","        return result","    }","}"],"type":"codeListing"}],"kind":"content"}],"sections":[],"kind":"symbol","variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/leetcodedocs\/binarytreerightsideview"]}],"hierarchy":{"paths":[["doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"metadata":{"navigatorTitle":[{"kind":"identifier","text":"BinaryTreeRightSideView"}],"symbolKind":"struct","modules":[{"name":"LeetCodeDocs"}],"color":{"standardColorIdentifier":"orange"},"role":"symbol","title":"BinaryTreeRightSideView","roleHeading":"Structure","externalID":"s:12LeetCodeDocs23BinaryT