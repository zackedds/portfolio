{"schemaVersion":{"patch":0,"major":0,"minor":3},"hierarchy":{"paths":[["doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs"]]},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs\/MinStack"},"seeAlsoSections":[{"generated":true,"anchor":"Stack","identifiers":["doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs\/ValidParentheses"],"title":"Stack"}],"kind":"symbol","metadata":{"color":{"standardColorIdentifier":"orange"},"title":"MinStack","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"MinStack"}],"externalID":"s:12LeetCodeDocs8MinStackV","role":"symbol","symbolKind":"struct","modules":[{"name":"LeetCodeDocs"}],"navigatorTitle":[{"text":"MinStack","kind":"identifier"}],"roleHeading":"Structure"},"abstract":[{"type":"text","text":"LeetCode #155 • Medium • Stack"}],"variants":[{"paths":["\/documentation\/leetcodedocs\/minstack"],"traits":[{"interfaceLanguage":"swift"}]}],"sections":[],"primaryContentSections":[{"kind":"declarations","declarations":[{"tokens":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"MinStack","kind":"identifier"}],"languages":["swift"],"platforms":["macOS"]}]},{"kind":"content","content":[{"anchor":"overview","level":2,"text":"Overview","type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Min Stack"}]},{"anchor":"Intuition","level":2,"text":"Intuition","type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"To retrieve the minimum in O(1) time without scanning, we maintain a secondary ‘min-stack’ alongside the main stack. Every time we push a value, we compare it with the current minimum and push the lower of the two onto the min-stack. This ensures the top of the min-stack always corresponds to the minimum of the main stack at that height."}]},{"type":"thematicBreak"},{"anchor":"Complexity-Analysis","level":2,"text":"Complexity Analysis","type":"heading"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"type":"text","text":"Time Complexity"}],"type":"strong"},{"type":"text","text":": "},{"type":"codeVoice","code":"O(1)"}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Space Complexity"}],"type":"strong"},{"text":": ","type":"text"},{"type":"codeVoice","code":"O(N)"}],"type":"paragraph"}]}]},{"type":"thematicBreak"},{"anchor":"Solution","level":2,"text":"Solution","type":"heading"},{"syntax":"swift","code":["class MinStack {","    private var stack: [Int] = []","    private var stackMin: [Int] = []","","    func push(_ val: Int) {","        stack.append(val)","        \/\/ Push the new value OR the current min, whichever is smaller","        if let currentMin = stackMin.last {","            stackMin.append(min(currentMin, val))","        } else {","            stackMin.append(val)","        }","    }","    ","    func pop() {","        stack.removeLast()","        stackMin.removeLast()","    }","    ","    func top() -> Int {","        return stack.last ?? -1","    }","    ","    func getMin() -> Int {","        return stackMin.last ?? -1","    }","}"],"type":"codeListing"}]}],"references":{"doc://LeetCodeDocs/documentation/LeetCodeDocs/ValidParentheses":{"fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"ValidParentheses"}],"navigatorTitle":[{"kind":"identifier","text":"ValidParentheses"}],"url":"\/documentation\/leetcodedocs\/validparentheses","type":"topic","identifier":"doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs\/ValidParentheses","title":"ValidParentheses","kind":"symbol","abstract":[{"text":"LeetCode #20 • Easy • Stack","type":"text"}],"role":"symbol"},"doc://LeetCodeDocs/documentation/LeetCodeDocs/MinStack":{"fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"MinStack","kind":"identifier"}],"navigatorTitle":[{"text":"MinStack","kind":"identifier"}],"url":"\/documentation\/leetcodedocs\/minstack","title":"MinStack","abstract":[{"text":"LeetCode #155 • Medium • Stack","type":"text"}],"type":"topic","identifier":"doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs\/MinStack","kind":"symbol","role":"symbol"},"doc://LeetCodeDocs/documentation/LeetCodeDocs":{"title":"LeetCodeDocs","type":"topic","identifier":"doc:\/\/LeetCodeDocs\/documentation\/LeetCodeDocs","url":"\/documentation\/leetcodedocs","role":"collection","kind":"symbol","abstract":[{"type":"text","text":"My collection of Swift solutions for LeetCode problems, focusing on optimization, time complexity, and language features."}]}}}